{
  "builders": [
    {
      "type": "docker",
      "name": "alpine",
      "image": "alpine-sdk",
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh", "-l"],
      "pull": false,
      "discard": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "git clone https://github.com/kikitux/myip-cli",
        "cd myip-cli/",
        "gcc -o myip -static *c *h",
        "sleep 5"
      ]
    },
    {
      "type": "file",
      "source": "/myip-cli/myip",
      "destination": "myip",
      "direction": "download"
    }
  ]
}
